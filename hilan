// Core function â€” does all the work
function fillAttendance(startTime, endTime, symbolId = "0") {
  $("tr[id^='ctl00_mp_RG_Days_'][id*='_row_']").each(function () {
    const $row = $(this);

    $row
      .find("td[id*='cellOf_ManualEntry_EmployeeReports_row'] input")
      .val(startTime);

    $row
      .find("td[id*='_ManualExit_EmployeeReports_row_'] input")
      .val(endTime);

    $row
      .find("select[id*='SymbolId_EmployeeReports']")
      .val(symbolId)
      .trigger("change");
  });
}

// Wrapper for Office
function fillAttendanceOffice(startTime, endTime) {
  fillAttendance(startTime, endTime, "0"); // Office = 0
}

// Wrapper for Home
function fillAttendanceHome(startTime, endTime) {
  fillAttendance(startTime, endTime, "7"); // Home = 7
}
